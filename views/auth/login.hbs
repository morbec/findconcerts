<div class="navbar-container-login">
  <a class="navbar-link" href="/">home</a>
</div>

<div class="login-container">
  <div class="login-title">
    <h1>login</h1>
  </div>

  <div class="login-input-container">
    <form id="form" action="/auth/login" method="post" class="login-input-form">
      <div class="input-div">
        <input class="login-input" type="text" placeholder="username" name="username" required>
      </div>
      <div class="input-div">
        <input class="login-input" type="password" placeholder="password" name="password" required>
      </div>
      <input type="submit" style="visibility: hidden;" />
    </form>
    {{#if errorMessage}}
    <div class="error-message">{{errorMessage}}</div>
    {{/if}}
  </div>
  
</div>