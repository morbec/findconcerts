<div class="navbar-container-login">
  <a class="navbar-link" href="/">Home</a>
</div>

<div class="signup-container">
  <div class="signup-title">
    <h1>Sign up</h1>
  </div>

  <div class="signup-input-container">
    <form id="form" action="/auth/signup" method="post" class="signup-input-form">
      <div class="signup-div">
        <input type="text" class="signup-input" placeholder="Enter first name" name="firstName" required>
      </div>
      <div class="signup-div">
        <input type="text" class="signup-input" placeholder="Enter last name" name="lastName" required>
      </div>
      <div class="signup-div">
        <input type="text" class="signup-input" placeholder="Enter username" name="username" required>
      </div>
      <div class="signup-div">
        <input type="password" class="signup-input" placeholder="Enter password" name="password" required>
      </div>
      <input type="submit" style="visibility: hidden;" />
      {{#if errorMessage}}
      <div class="error-message">{{errorMessage}}</div>
      {{/if}}
    </form>
  </div>

</div>